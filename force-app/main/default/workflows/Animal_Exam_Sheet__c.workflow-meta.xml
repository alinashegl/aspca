    <rules>
        <fullName>Automatically schedule ear cytology</fullName>
        <actions>
            <name>Ear_Cytology</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Animal_Exam_Sheet__c.Otic_Ears__c</field>
            <operation>contains</operation>
            <value>Moderate black/brown waxy debris,Severe black/brown waxy debris</value>
        </criteriaItems>
        <description>If &quot;Otic/Ears&quot; is equal to either moderate or severe waxy debris, automatically create an ear cytology task assigned to Med Admin</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Automatically schedule nail trim</fullName>
        <actions>
            <name>Nail_Trim</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Animal_Exam_Sheet__c.Nails__c</field>
            <operation>includes</operation>
            <value>Overgrown</value>
        </criteriaItems>
        <description>If &quot;Nails&quot; is equal to overgrown, automatically create a nail trim task assigned to Med Admin</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
