<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>National_Case_Reminder_Alert</fullName>
        <description>National Case Reminder Alert</description>
        <protected>false</protected>
        <recipients>
            <recipient>nina.rosenow@aspca.org</recipient>
            <type>user</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>unfiled$public/National_Case_Reminder_Alert</template>
    </alerts>
    <fieldUpdates>
        <fullName>Set_case_reason_to_investigation</fullName>
        <field>Reason</field>
        <literalValue>Investigation</literalValue>
        <name>Set case reason to investigation</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Case_Reason_to_Criminal</fullName>
        <field>Reason</field>
        <literalValue>Consultation</literalValue>
        <name>Update Case Reason to Consultation</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Case_Summary_Preview</fullName>
        <field>Case_Summary_Preview__c</field>
        <formula>LEFT(Description, 255)</formula>
        <name>Update Case Summary Preview</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Case_reason_to_Disaster</fullName>
        <field>Reason</field>
        <literalValue>Disaster</literalValue>
        <name>Update Case reason to Disaster</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Case_reason_to_Operations</fullName>
        <field>Reason</field>
        <literalValue>Operations</literalValue>
        <name>Update Case reason to Operations</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Set case reason to Consultation</fullName>
        <actions>
            <name>Update_Case_Reason_to_Criminal</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Case.Category__c</field>
            <operation>equals</operation>
            <value>Consultation</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Set case reason to Disaster</fullName>
        <actions>
            <name>Update_Case_reason_to_Disaster</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Case.Category__c</field>
            <operation>equals</operation>
            <value>Disaster</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Set case reason to Operations</fullName>
        <actions>
            <name>Update_Case_reason_to_Operations</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Case.Category__c</field>
            <operation>equals</operation>
            <value>Operations</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Set case reason to investigation</fullName>
        <actions>
            <name>Set_case_reason_to_investigation</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Case.Category__c</field>
            <operation>equals</operation>
            <value>Investigation</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update Case Summary Preview</fullName>
        <actions>
            <name>Update_Case_Summary_Preview</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Description</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Add first 255 characters of &quot;Case Summary&quot; text to &quot;Case Summary Preview&quot;</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
