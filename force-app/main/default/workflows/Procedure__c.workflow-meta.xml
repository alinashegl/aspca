<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Procedure_Approved</fullName>
        <description>Procedure Approved</description>
        <protected>false</protected>
        <recipients>
            <recipient>niki.curnell@aspca.org</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>crc.medical@aspca.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Procedure_Approved</template>
    </alerts>
    <alerts>
        <fullName>Procedure_Scheduled_Notification</fullName>
        <ccEmails>CRCMedicalAppts@aspca.org</ccEmails>
        <ccEmails>gpdailybehaviorreport@aspca.org</ccEmails>
        <ccEmails>CRCBehaviorSummer@aspca.org</ccEmails>
        <description>Procedure Scheduled Notification</description>
        <protected>false</protected>
        <senderAddress>crc.medical@aspca.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Scheduled_Procedure</template>
    </alerts>
    <alerts>
        <fullName>Scheduled_Procedure_Reminder</fullName>
        <ccEmails>CRCMedicalAppts@aspca.org</ccEmails>
        <ccEmails>gpdailybehaviorreport@aspca.org</ccEmails>
        <ccEmails>CRCBehaviorSummer@aspca.org</ccEmails>
        <description>Scheduled Procedure Reminder</description>
        <protected>false</protected>
        <senderAddress>crc.medical@aspca.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>unfiled$public/Scheduled_Procedure_Reminder</template>
    </alerts>
    <rules>
        <fullName>Procedure Scheduled</fullName>
        <actions>
            <name>Procedure_Scheduled_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Procedure__c.Status__c</field>
            <operation>equals</operation>
            <value>Scheduled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Procedure__c.Procedure_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Scheduled_Procedure_Reminder</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Procedure__c.Procedure_Date__c</offsetFromField>
            <timeLength>-3</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
