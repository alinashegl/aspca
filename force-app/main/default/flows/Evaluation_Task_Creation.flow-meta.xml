<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>53.0</apiVersion>
    <description>Create a task for the calendar, setting the behavior evaluation three days after a dog&apos;s intake date.</description>
    <formulas>
        <description>Intake Date plus four days</description>
        <name>Evaluation_Date</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!$Record.Intake_Date_Time__c}) + 4</expression>
    </formulas>
    <interviewLabel>Evaluation Task Creation {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Evaluation Task Creation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <description>Create Evaluation Task on day four of animal&apos;s stay.</description>
        <name>Evaluation_Task</name>
        <label>Evaluation Task</label>
        <locationX>178</locationX>
        <locationY>331</locationY>
        <inputAssignments>
            <field>ActivityDate</field>
            <value>
                <elementReference>Evaluation_Date</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Animal__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Editor__c</field>
            <value>
                <stringValue>System</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>RecordTypeId</field>
            <value>
                <stringValue>Evaluation</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status</field>
            <value>
                <stringValue>Not Started</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Subject</field>
            <value>
                <stringValue>Evaluation</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>WhoId</field>
        </inputAssignments>
        <object>Task</object>
    </recordCreates>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Evaluation_Task</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Shelter_Location2__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>ARC and CARE</stringValue>
            </value>
        </filters>
        <filters>
            <field>Type_of_Animal__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Dog</stringValue>
            </value>
        </filters>
        <object>Animal__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
