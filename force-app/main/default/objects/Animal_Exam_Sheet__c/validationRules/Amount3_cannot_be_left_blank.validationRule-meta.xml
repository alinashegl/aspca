<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amount3_cannot_be_left_blank</fullName>
    <active>true</active>
    <description>If &quot;Praziquantel&quot; is checked, &quot;Amount-3 in ml&quot; must not be left blank</description>
    <errorConditionFormula>Praziquantel_SC__c = true  &amp;&amp;  ISBLANK(Amount_3__c)</errorConditionFormula>
    <errorMessage>Please specify a Praziquantel amount</errorMessage>
</ValidationRule>
