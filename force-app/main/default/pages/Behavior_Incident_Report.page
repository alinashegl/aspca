<apex:page standardController="Incidents__c"
           extensions="Behavior_Incident_Report_Controller"
           renderAs="pdf" applyHtmlTag="false" applyBodyTag="false"
           showHeader="false" standardStylesheets="false">
    <!--           extensions="Behavior_Incident_Report_Controller"
-->           
    
    <apex:styleSheet value="{!URLFOR($Resource.Behavior_Incident_PDF_Style)}"/>
    <apex:variable var="inc" value="{!incident}" />    
    <html>
        <head>
        </head>
        <body>
            <apex:variable value="{!$Resource.dbUnchecked}" var="unchecked"/>
            <apex:variable value="{!$Resource.dbChecked}" var="checked"/>
            <div>
                <h2>Behavior Incident Report</h2>
                <h3>To be completed by main person involved in the incident, or his/her supervisor</h3>
            </div>
            <table>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr>
                    <td width="25%" align="right"><strong>Animal ID</strong></td>
                    <td width="25%" align="left">{!inc.Animal__r.Name}</td>
                    <td width="25%" align="right"><strong>ASPCA Name</strong></td>
                    <td width="25%" align="left">{!inc.Animal__r.Animal_Name__c}</td>
                </tr> 
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr>
                    <td width="25%" align="right"><strong>Incident ID</strong></td>
                    <td width="25%" align="left">{!inc.Name}</td>
                    <td width="25%" align="right"><strong>Incident date/time</strong></td>
                    <td width="25%" align="left">{!inc.Incident_Date_Time__c}</td>
                </tr> 
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr>
                    <td width="25%" align="right"><strong>Supervisor / Team lead</strong></td>
                    <td width="25%" align="left">{!inc.Supervisor_Team_Lead__c}</td>
                    <td width="25%" align="right"><strong>Report date</strong></td>
                    <td width="25%" align="left">{!inc.Report_Date__c}</td>
                </tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                
            </table>
            <table bgcolor="#D3D3D3">
                <tr><th colspan="2">PLEASE IDENTIFY WHO WAS INVOLVED AND ANY WITNESSES TO THE INCIDENT</th></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr>
                    <td width="50%"><strong>Your name</strong></td>
                    <td width="50%"><strong>Witnesses</strong></td>
                </tr>
                <tr class="one">
                    <td width="50%">{!inc.Person_Involved__c}</td>
                    <td width="50%">{!inc.Witnesses__c}</td>
                </tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <table>
                <tr><th>PLEASE DESCRIBE, IN DETAIL, WHAT OCCURRED OR WHAT YOU SAW</th></tr>
                <tr><td></td></tr>
                <tr><td>BE SURE TO INCLUDE ANY INFORMATION ABOUT THE ENVIRONMENT, THE SITUATION, AND PRECEDING EVENTS THAT MAY BE RELEVANT.</td></tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
                <tr width="80%" class="one">
                    <td>{!inc.Incident_Description__c}</td>
                </tr>
                <tr><td></td></tr>
                <tr><td></td></tr>
            </table>
            <!-- <table bgcolor="#D3D3D3">
                <apex:form >
                    <apex:pageBlock title="WHAT BEHAVIORS WERE EXHIBITED BY THE DOG (CHECK ALL THAT APPLY):">
                        <apex:dataTable value="{!behaviorsExhibited}" var="b">
                            <apex:column >
                                <apex:inputCheckbox value="{!b.selected}" label="{!b.label}" rendered="true">
                                    <apex:image value="{!IF(B.selected == true , checked, unchecked)}" width="25" height="12" style="float: left"/>
